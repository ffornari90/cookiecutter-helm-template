{
  "chart_name": "my-chart",
  "need_dep_chart": [
    "yes",
    "no"
  ],
  "dep_chart_name": "{{ cookiecutter.need_dep_chart == 'yes' and 'my-dependency' or '' }}",
  "dep_chart_version": "{{ cookiecutter.need_dep_chart == 'yes' and '1.0.0' or '' }}",
  "dep_chart_repository": "{{ cookiecutter.need_dep_chart == 'yes' and 'https://charts.example.com' or '' }}",
  "include_deployment": [
    "yes",
    "no"
  ],
  "deployment_image_repo": "{{ cookiecutter.include_deployment == 'yes' and 'my-repo' or '' }}",
  "deployment_image_tag": "{{ cookiecutter.include_deployment == 'yes' and 'latest' or '' }}",
  "deployment_s3_secret": "{{ cookiecutter.include_deployment == 'yes' and 's3-secrets' or '' }}",
  "deployment_image_secret": "{{ cookiecutter.include_deployment == 'yes' and 'registry' or '' }}",
  "include_service": [
    "yes",
    "no"
  ],
  "include_ingress": [
    "yes",
    "no"
  ],
  "include_configmap": [
    "yes",
    "no"
  ],
  "include_database": [
    "yes",
    "no"
  ],
  "include_external_secret": [
    "yes",
    "no"
  ],
  "external_secret":
  {
    "name": "example-external-secret",
    "k8s_secret_name": "example-kubernetes-secret",
    "secret_data": [
      {
        "secret_key": "example-key-1",
        "vault_secret_key": "vault/secret/data/path-1",
        "vault_secret_property": "secret-property-1"
      },
      {
        "secret_key": "example-key-2",
        "vault_secret_key": "vault/secret/data/path-2",
        "vault_secret_property": "secret-property-2"
      }
    ]
  },
  "_extensions": [
    "cookiecutter.extensions.SlugifyExtension",
    "cookiecutter.extensions.UUIDExtension",
    "cookiecutter.extensions.TimeExtension",
    "cookiecutter.extensions.RandomStringExtension"
  ],
  "_copy_without_render": [
    "templates/*"
  ]
