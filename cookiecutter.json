{
  "chart_name": "my-chart",
  "need_dep_chart": [
    "yes",
    "no"
  ],
  "dep_chart_name": "{% if cookiecutter.need_dep_chart == 'yes' %}dependency-chart{% endif %}",
  "dep_chart_version": "{% if cookiecutter.need_dep_chart == 'yes' %}0.1.0{% endif %}",
  "dep_chart_repository": "{% if cookiecutter.need_dep_chart == 'yes' %}https://charts.example.com{% endif %}",
  "_extensions": [
    "jinja2_time.TimeExtension"
  ],
  "__prompts__": {
    "chart_name": "Name of your Helm chart",
    "need_dep_chart": "Do you need a dependency chart? (yes/no)"
  }
}
